@model IEnumerable<BakeryHouse.Models.Ingredient>

@{
    ViewData["Title"] = "Ingrediënt-Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
