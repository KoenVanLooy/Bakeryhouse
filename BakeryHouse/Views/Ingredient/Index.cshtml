                @Html.DisplayFor(modelItem => item.Soort)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Allergeen)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Voorraad)
            </td>
            <td>
