<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BakeryHouse</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css" rel="stylesheet">
    <link href="~/css/Style.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bottomborder">
            <div class="container">
                <div class="col-5 border">
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row float-right">

                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                            </li>

                        </ul>
                    </div>
                </div>
                <div class="col border align-content-center">
                    <div class="text-center">
                        <a asp-area="" asp-controller="Home" asp-action="Index" class="imgnav">
                            <img src="~/Images/BakeryHouse.PNG" />
                        </a>
                    </div>
                </div>
                <div class="col-5 border">
                    <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row">
                        <ul class="navbar-nav">
                            <li class="nav-item d-inline-block float-left mx-1">
                                @if (this.User.IsInRole("Admin"))
                                {
                                    <div class="dropdown">
                                        <a class="nav-link dropdown-toggle mt-2" href="#" id="adminMenu" role="button" data-toggle="dropdown">
                                            Admin
                                        </a>

                                        <div class="dropdown-menu dropdown-default navbar-dropdown-menu" aria-labelledby="adminMenu">
                                            <a class="nav-link text-dark" asp-controller="Admin" asp-action="Index" >Orders</a>
                                            <a class="nav-link text-dark" href="">Gebruikers</a>
                                        </div>
                                    </div>
                                }
                            </li>
                            <li class="nav-item d-inline-block mt-3">
                                <a asp-area="" asp-controller="Cart" asp-action="Index">Winkelmand <i class="fa fa-shopping-cart"></i></a>
                            </li>
                            <li class="nav-item dropdown m-2">
                                <a class="nav-link dropdown-toggle text-dark pl-0 d-inline-block" href="#" id="userMenu" role="button" aria-haspopup="true" data-toggle="dropdown">
                                    <i class="fa fa-user"></i>
                                </a>
                                <div class="dropdown-menu dropdown-menu-md-right dropdown-default navbar-dropdown-menu" aria-labelledby="userMenu">
                                    <!--<partial name="_LoginPartial" />-->
                                    @Html.Partial("_LoginPartial")
                                </div>
                            </li>
                        </ul>

                    </div>

                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - BakeryHouse - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
