@using Microsoft.AspNetCore.Identity
@using BakeryHouse.Areas.Identity.Data

@inject SignInManager<CustomUser> SignInManager
@inject UserManager<CustomUser> UserManager


@if (SignInManager.IsSignedIn(User))
{
   
    
        <a id="manage" class="dropdown-item" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello </a>
    
    <div class="dropdown-item">
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button id="logout" type="submit" class="nav-link btn btn-link text-dark">Logout</button>
        </form>
    </div>
}
else
{
        <a class="dropdown-item"  asp-area="Identity" asp-page="/Account/Register">Register</a>
        <a class="dropdown-item"  asp-area="Identity" asp-page="/Account/Login">Login</a>
}

