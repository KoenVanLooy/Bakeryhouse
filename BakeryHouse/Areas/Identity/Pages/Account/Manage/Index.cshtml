@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h4>@ViewData["Title"]</h4>
<partial name="_StatusMessage" model="Model.StatusMessage" />
<form id="profile-form" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="col col-md-6 col-12 text-center float-left">
        <div class="form-row py-1 text-left">
            <label asp-for="Username"></label>
            <input asp-for="Username" class="form-control" disabled />
        </div>
        <div class="form-row py-1 text-left">
            <label asp-for="Input.Voornaam"></label>
            <input asp-for="Input.Voornaam" class="form-control" />
            <span asp-validation-for="Input.Voornaam" class="text-danger"></span>
        </div>
        <div class="form-row py-1 text-left">
            <label asp-for="Input.Naam"></label>
            <input asp-for="Input.Naam" class="form-control" />
            <span asp-validation-for="Input.Naam" class="text-danger"></span>
        </div>

    </div>
    <div class="col col-md-6 col-12 text-center float-left">
        <div class="form-row py-1 text-left">
            <label asp-for="Input.Email"></label>
            <input asp-for="Input.Email" class="form-control" />
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        <div class="form-row py-1 text-left">
            <label asp-for="Input.Postcode"></label>
            <input asp-for="Input.Postcode" class="form-control" />
            <span asp-validation-for="Input.Postcode" class="text-danger"></span>
        </div>
        <div class="form-row py-1 text-left">
            <label asp-for="Input.PhoneNumber"></label>
            <input asp-for="Input.PhoneNumber" class="form-control" />
            <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
        </div>
        <button id="update-profile-button" type="submit" class="btn btn-primary">Save</button>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}