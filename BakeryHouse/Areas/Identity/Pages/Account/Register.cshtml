@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>

<div class="container">
    <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
        <h4>Create a new account.</h4>
        <hr />
        <div class="col col-md-6 col-12 text-center float-left">
            <div class="form-row py-1 text-left">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-row py-1 text-left">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-row py-1 text-left">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-row py-1 my-3 text-left">
                <button type="submit" class="btn btn-primary">Register</button>
            </div>
        </div>
            <div class="col col-md-6 col-12 text-center float-left">
                <div class="form-row py-1 text-left">
                    <label asp-for="Input.Voornaam"></label>
                    <input asp-for="Input.Voornaam" class="form-control" />
                    <span asp-validation-for="Input.Voornaam" class="text-danger"></span>
                </div>

                <div class="form-row py-1 text-left">
                    <label asp-for="Input.Naam"></label>
                    <input asp-for="Input.Naam" class="form-control" />
                    <span asp-validation-for="Input.Naam" class="text-danger"></span>
                </div>
                <div class="form-row py-1 text-left">
                    <label asp-for="Input.Postcode"></label>
                    <input asp-for="Input.Postcode" class="form-control" />
                    <span asp-validation-for="Input.Postcode" class="text-danger"></span>
                </div>
                <div class="form-row py-1 text-left">
                    <label asp-for="Input.Telefoon"></label>
                    <input asp-for="Input.Telefoon" class="form-control" />
                    <span asp-validation-for="Input.Telefoon" class="text-danger"></span>
                </div>
            </div>


</form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
